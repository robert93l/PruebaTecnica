<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.pruebatecnica.view.lista.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detallesHeroeFragment"
            app:destination="@id/detallesHeroeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detallesHeroeFragment"
        android:name="com.example.pruebatecnica.view.detalle.DetallesHeroeFragment"
        android:label="fragment_detalles_heroe"
        tools:layout="@layout/fragment_detalles_heroe" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>